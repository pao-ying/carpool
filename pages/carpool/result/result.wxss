@import '../../../utils/util.wxss';

.center {
    justify-content: center;
    align-items: center;
}

.background {
    position: absolute;
    z-index: -1;
}

.top {
    display: flex;
    margin-top: 30rpx;
    margin-left: 30rpx;
}

.top-words {
    font-weight: bold;
    font-size: 50rpx;
    opacity: 0.78;
}

.total {
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
}

.team-info {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 650rpx;
    height: 120rpx;
    margin-top: 15rpx;
    margin-left: 50rpx;
    box-shadow: 2rpx 5rpx 20rpx 4rpx rgba(130,130,130,0.50);
    border-radius: 32rpx;
    border-radius: 32rpx;
}

.wx-head {
    margin-left: 15rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.team-time-date-area {
    display: flex;
    margin-left: 10rpx;
    flex-direction: row;
    /* border: 1rpx solid; */
}

.team-time-date {
    display: flex;
    flex-direction: column;
    margin: 10rpx;
    /* border: 1rpx solid; */
}

.team-time {
    font-size: 45rpx;
    font-weight: bold;
    /* border: 1rpx solid; */
}

.team-date {
    opacity: 0.69;
    font-size: 20rpx;
    /* border: 1rpx solid; */
}

.character {
    font-size: 45rpx;
    /* border: 1rpx solid; */
}

.sex-area {
    position: relative;
    top: 30rpx;
    width: 120rpx;
    /* border: 1rpx solid; */
}

.sex-area-flex {
    display: flex;
    flex-direction: row;
}


.icon-area {
    position: absolute;
    left: 570rpx;
    top: 22rpx;
}


.team-mark-button {
    display: flex;
    flex-direction: column;
    width: 600rpx;
    height: 0rpx;
    margin-left: 75rpx;
    margin-top: 20rpx;
    box-shadow: 8rpx 12rpx 34rpx -6rpx rgba(130,130,130,0.50);
    border-radius: 32rpx;
    border-radius: 32rpx;
}

.team-mark-area {
    display: flex;
    background:  #D8D8D8;
    width: 556rpx;
    height: 166rpx;
    border-radius: 20rpx;
    
}

.team-mark-words {
    width: 520rpx;
    height: 130rpx;
    text-indent: 4rpx;
    font-size: 30rpx;
    opacity: 0.95;
    letter-spacing: 2rpx;
    text-align: left;
    /* border: 1rpx solid; */
}

.team-join-button {
    display: flex;
    background: #17A085;
    box-shadow: 0 4rpx 10rpx 4rpx #17A085;
    border-radius: 28rpx;
    margin-top: 20rpx;
    width: 200rpx;
    height: 40rpx;

}