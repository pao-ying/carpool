/* pages/second/settings/settings.wxss */
/*@import "../want/want.wxss";*/

page {
    height: 100%;
}

.main-data {
    position: relative;
    min-height: 100%;
    height: auto!important;
    width: 100%;
    overflow-x: hidden;
}

.main {
    /*padding-bottom: 120rpx;*/
    width: 100%;
    overflow-x: hidden;
}

.kb-term-title {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    flex-flow: row nowrap;
    align-items: center;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    z-index: 200;
    background-color: #9578ff;
    border-bottom: 1rpx solid #745bcf;
    box-sizing: border-box;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

.kb-term-item {
    flex: 1;
}

.kb-term-left,.kb-term-right {
}

.kb-term-center {
    text-align: center;
}

.kb-term-text {
    color: #fff;
    font-size: 24rpx;
}

.kb-title {
    position: fixed;
    top: 60rpx;
    left: 0;
    display: flex;
    width: 750rpx;
    height: 80rpx;
    z-index: 200;
    border-bottom: 2rpx solid #eee;
    color: #fff;
    box-sizing: border-box;
    background-color: #9578ff;
    box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1);
}

.kb-title .kb-mon {
    height: 80rpx;
    font-size: 9pt;
    line-height: 30rpx;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    border-bottom: 1rpx solid #eee;
}

.kb-date {
    color: #fff;
}

.kb-title-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    text-align: center;
    width: 100rpx;
    margin-right: 4rpx;
    font-size: 9pt;
    line-height: 120%;
    box-sizing: border-box;
}

.kb-num-ctn {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
    font-size: 8pt;
    flex-shrink: 0;
    width: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    border-right: 1rpx solid #eee;
    color: #777;
    padding-bottom: 24rpx;
    box-sizing: border-box;
    padding-top: 60rpx;
}

.kb-num-ctn-hide {
    transform: translate3d(-35rpx,0,0);
}

.kb-num-ctn view {
    height: 125rpx;
    line-height: 125rpx;
    text-align: center;
}

.kb-num-ctn .kb-timeline-tri {
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: 58rpx;
    width: 0;
    height: 0;
    line-height: 0;
    border: 10rpx solid transparent;
    border-left-color: #0069d9;
    opacity: .6;
}

.mg-t {
    padding-top: 8rpx;
}

.mg-8 {
    margin-bottom: 8rpx;
}

.mg-12 {
    margin-bottom: 12rpx;
}

.caret {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 8rpx;
    vertical-align: middle;
    border-top: 8rpx solid;
    border-right: 8rpx solid transparent;
    border-left: 8rpx solid transparent;
}

.kb-ctn {
    position: relative;
    flex: 1;
    width: 100%;
    height: 1650rpx;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    transition: all .2s ease-in-out;
    margin-top: 86rpx;
    box-sizing: border-box;
}

.all-ctn {
    margin-top: 0;
}

.kb-cards-ctn {
    position: absolute;
    top: 0;
    left: 0;
    flex: 1;
    width: 726rpx;
    height: 1670rpx;
    display: flex;
    box-sizing: border-box;
    align-items: stretch;
    padding: 8rpx 0 0 4rpx;
    margin-left: 24rpx;
    margin-top: 60rpx;
    padding-bottom: 70rpx;
    transition: margin-bottom .15s ease-in-out;
}

.kb-cards-column {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    width: 100rpx;
    background: transparent;
    margin-right: 4rpx;
    box-sizing: border-box;
}

.kb-cards-column:last-child {
    margin-right: 0;
}

.kb-timeline {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    margin-top: -2rpx;
    width: 100rpx;
    height: 5rpx;
    background: #0069d9;
    z-index: 99;
    opacity: .6;
}

.kb-timeline::before,.kb-timeline::after {
    content: '';
    position: absolute;
    width: 5rpx;
    height: 10rpx;
    border-radius: 1rpx;
    background: #0069d9;
}

.kb-timeline::before {
    left: -3rpx;
    top: -2rpx;
}

.kb-timeline::after {
    right: -3rpx;
    top: -2rpx;
}

.kb-card {
    position: relative;
    z-index: 10;
    width: 100rpx;
    min-height: 250rpx;
    border-radius: 5rpx;
    box-sizing: border-box;
}

.kb-card-content {
    position: absolute;
    z-index: 11;
    background: #eee;
    width: 100rpx;
    min-height: 250rpx;
    padding: 0 6rpx;
    text-align: center;
    box-sizing: border-box;
    border-radius: 5rpx;
    display: flex;
    flex-flow: column nowrap;
    overflow: hidden;
    color: #fff;
    box-shadow: 0 0 6rpx 2rpx rgba(255,255,255,.45);
}

.kb-card-item {
    flex: 1;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.kb-card-place {
    font-size: 9pt;
    padding: 8rpx 0 0;
    box-sizing: border-box;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    line-height: 130%;
}

.kb-card-person {
    font-size: 9pt;
    padding: 8rpx 0 0;
    box-sizing: border-box;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 130%;
}

.kb-card-name-text {
    font-size: 10pt;
    box-sizing: border-box;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    line-height: 130%;
}

.kb-detail {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 998;
    background: rgba(0,0,0,.1)
}

.kb-detaile-card-ctn {
    position: fixed;
    z-index: 999;
    top: 50%;
    left: 50%;
    padding: 30rpx 40rpx;
    overflow: hidden;
    transform: translate(-50%,-50%);
    display: flex;
    flex-flow: row nowrap;
    align-items: stretch;
    transition: all .2s ease-in-out;
    max-width: 95%;
}

.kb-card-content-detail {
    background-color: #F39C12;
    width: 220rpx;
    min-height: 270rpx;
    padding: 10rpx;
    box-sizing: border-box;
    box-shadow: 0 0 6rpx 4rpx rgba(255,255,255,.3);
    animation: show_detail 1s linear .1s forwards;
    opacity: 0;
    border-radius: 10px;
}

@-webkit-keyframes show_detail {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes show_detail {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.kb-card-content-detail+.kb-card-content-detail {
    margin-left: 6rpx;
}

.kbc-detail {
    margin-bottom: 10rpx;
    display: block;
    color: #fff;
}

.kb-name {
    font-size: 28rpx;
}

.kb-palce {
    font-size: 24rpx;
}

.kb-teach {
    font-size: 24rpx;
}

.kb-week {
    font-size: 24rpx;
}

.main-box {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding-bottom: 80rpx;
    transition: all .2s ease-in-out;
    margin-top: 70rpx;
}

.remark {
    padding-bottom: 10rpx;
    margin-top: 0;
}

.remark-box {
    width: 100%;
    background-color: #fff;
    padding: 30rpx 20rpx;
}

.remark-box .label {
    color: #909090;
    font-size: 14pt;
    padding-bottom: 8rpx;
}

.remark-content {
    color: #27c799;
    font-size: 11pt;
}
.footer-data{
  color:#ff4455;
  text-align: center;
  background-color: #fdc0c0;
}